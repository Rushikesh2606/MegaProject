<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Expertise (Form 1)"
            android:textColor="#000"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"/>

        <!-- Specialized Skills -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialized Skills"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Specialized Skills input field"/>

        <!-- Tools/Software Expertise -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tools/Software Expertise"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Tools/Software Expertise input field"/>

        <!-- Tagline -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tagline"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Tagline input field"/>

        <!-- Description/About Me -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description/About Me"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:gravity="top|start"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:inputType="textMultiLine"
            android:importantForAccessibility="yes"
            android:contentDescription="Description/About Me input field"/>

        <!-- Years of Experience -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Years of Experience"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:padding="14dp"
            android:layout_marginBottom="24dp"
            android:inputType="number"
            android:importantForAccessibility="yes"
            android:contentDescription="Years of Experience input field"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="18sp"
            android:backgroundTint="#1EB980"
            android:textColor="#fff"
            android:padding="14dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/next"
            android:importantForAccessibility="yes"
            android:contentDescription="Next button for form submission"/>
    </LinearLayout>
</ScrollView>
