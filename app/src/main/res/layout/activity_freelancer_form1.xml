<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Expertise (Form 1)"
            android:textColor="#000"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Specialized Skills -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialized Skills"
            android:background="@android:drawable/edit_text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Tools/Software Expertise -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tools/Software Expertise"
            android:background="@android:drawable/edit_text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Tagline -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tagline"
            android:background="@android:drawable/edit_text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Description/About Me -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description/About Me"
            android:background="@android:drawable/edit_text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:gravity="top|start"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="textMultiLine" />

        <!-- Years of Experience -->
        <EditText
            android:id="@+id/calendertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Years of Experience"
            android:background="@android:drawable/edit_text"
            android:textColor="#000"
            android:textColorHint="#000"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="none" />


        <!-- Next Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#1EB980"
            android:textColor="#fff"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>